{
  "name": "omniscript-cli",
  "version": "1.1.0",
  "description": "OmniScript Format (OSF) CLI tools - Command-line interface for parsing, validating, and converting OSF documents",
  "main": "dist/osf.js",
  "types": "dist/osf.d.ts",
  "bin": {
    "osf": "bin/osf.js"
  },
  "files": [
    "dist/**/*",
    "bin/**/*",
    "schema/**/*",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OmniScriptOSF/omniscript-core.git",
    "directory": "cli"
  },
  "bugs": {
    "url": "https://github.com/OmniScriptOSF/omniscript-core/issues"
  },
  "homepage": "https://omniscriptosf.github.io",
  "scripts": {
    "build": "pnpm exec tsc -p tsconfig.json",
    "clean": "pnpm exec rimraf dist",
    "dev": "pnpm exec tsc -p tsconfig.json --watch",
    "test": "pnpm exec vitest run",
    "test:watch": "pnpm exec vitest",
    "typecheck": "pnpm exec tsc --noEmit -p tsconfig.json",
    "prepublishOnly": "pnpm run build && pnpm test"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "omniscript-parser": "^1.1.0",
    "omniscript-converters": "^1.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.33",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "osf",
    "omniscript",
    "cli",
    "command-line",
    "document",
    "parser",
    "converter",
    "markdown",
    "slides",
    "spreadsheet",
    "llm",
    "ai",
    "git-native",
    "typescript"
  ],
  "author": {
    "name": "Alphin Tom",
    "email": "alpha912@github.com",
    "url": "https://github.com/alpha912"
  },
  "license": "MIT"
}
