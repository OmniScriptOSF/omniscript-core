{
  "name": "omniscript-cli",
  "version": "0.5.7",
  "description": "OmniScript Format (OSF) CLI tools",
  "main": "dist/osf.js",
  "bin": {
    "osf": "bin/osf.js"
  },
  "files": [
    "dist/**/*",
    "bin/**/*",
    "schema/**/*",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/OmniScriptOSF/omniscript-core.git",
    "directory": "cli"
  },
  "bugs": {
    "url": "https://github.com/OmniScriptOSF/omniscript-core/issues"
  },
  "homepage": "https://github.com/OmniScriptOSF/omniscript-core/tree/main/cli#readme",
  "scripts": {
    "build": "pnpm exec tsc -p tsconfig.json",
    "clean": "pnpm exec rimraf dist",
    "dev": "pnpm exec tsc -p tsconfig.json --watch",
    "test": "pnpm exec vitest run",
    "test:watch": "pnpm exec vitest",
    "typecheck": "pnpm exec tsc --noEmit -p tsconfig.json"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "omniscript-parser": "^0.5.6",
    "omniscript-converters": "^0.5.6",
    "pptxgenjs": "^4.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.15.33",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "osf",
    "cli",
    "document",
    "parser"
  ],
  "author": "Alphin Tom",
  "license": "MIT"
}
